<section class="section" aria-labelledby="login-title">
  <div class="container">
    <h2 id="login-title" class="section-title">Admin Login</h2>
    <% if (typeof error !== 'undefined') { %>
      <p class="small" style="color:var(--error)"><%= error %></p>
    <% } %>
    <form method="post" action="/admin/login" class="contact-form" style="max-width:520px">
      <div class="form-group"><label>Username</label><input type="text" name="username" required></div>
      <div class="form-group"><label>Password</label><input type="password" name="password" required></div>
      <button class="btn btn-primary" type="submit">Login</button>
    </form>
  </div>
</section>