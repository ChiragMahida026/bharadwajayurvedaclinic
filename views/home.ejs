<script>
  /* =============== About lightbox =============== */
  (function () {
    const dlg = document.getElementById('about-lightbox');
    const img = dlg.querySelector('.lightbox-img');
    document.querySelectorAll('.about-thumb').forEach(btn => {
      btn.addEventListener('click', () => {
        img.src = btn.dataset.full;
        dlg.showModal();
      });
    });
    dlg.querySelector('.lightbox-close').addEventListener('click', () => dlg.close());
  }());

  /* =============== Service modal + hover =============== */
  (function () {
    const cards = [...document.querySelectorAll('.svc-card')];
    const modal = document.getElementById('svc-modal');
    const titleEl = document.getElementById('svc-modal-title');
    const bodyEl = document.getElementById('svc-modal-body');
    const btnPrev = document.getElementById('svc-prev');
    const btnNext = document.getElementById('svc-next');
    const btnClose = document.getElementById('svc-modal-close');

    let index = 0;

    function render(i) {
      index = (i + cards.length) % cards.length;
      const card = cards[index];
      titleEl.textContent = card.dataset.title || card.querySelector('.svc-title').textContent;
      const tpl = card.querySelector('template.svc-detail');
      bodyEl.innerHTML = '';
      if (tpl) {
        bodyEl.appendChild(tpl.content.cloneNode(true));
      } else {
        bodyEl.innerHTML = `<p>${card.dataset.teaser || ''}</p>`;
      }
    }

    cards.forEach((card, i) => {
      card.querySelectorAll('.svc-read').forEach(btn => {
        btn.addEventListener('click', () => {
          render(i);
          modal.showModal();
        });
      });
    });

    btnPrev.addEventListener('click', () => render(index - 1));
    btnNext.addEventListener('click', () => render(index + 1));
    btnClose.addEventListener('click', () => modal.close());

    // close on backdrop click
    modal.addEventListener('click', (e) => {
      const dialogRect = modal.querySelector('.modal-card').getBoundingClientRect();
      if (e.clientX < dialogRect.left || e.clientX > dialogRect.right ||
          e.clientY < dialogRect.top || e.clientY > dialogRect.bottom) {
        modal.close();
      }
    });

    // ESC key (native) works; add left/right arrows
    modal.addEventListener('keydown', (e) => {
      if (e.key === 'ArrowRight') render(index + 1);
      if (e.key === 'ArrowLeft') render(index - 1);
    });

    // touch swipe
    let sx = 0, sy = 0;
    modal.addEventListener('touchstart', (e) => { sx = e.touches[0].clientX; sy = e.touches[0].clientY; }, {passive:true});
    modal.addEventListener('touchend', (e) => {
      const dx = e.changedTouches[0].clientX - sx;
      const dy = e.changedTouches[0].clientY - sy;
      if (Math.abs(dx) > Math.abs(dy) && Math.abs(dx) > 40) {
        if (dx < 0) render(index + 1); else render(index - 1);
      }
    });
  }());
</script>
