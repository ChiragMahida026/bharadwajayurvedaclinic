<!-- Inline incremental JS for UI glue (kept small and robust) -->
<script>
  (function () {
    'use strict';

    // Small helpers
    const $ = (s, root = document) => root.querySelector(s);
    const $$ = (s, root = document) => Array.from(root.querySelectorAll(s));
    const isDialogSupported = typeof HTMLDialogElement !== 'undefined' && typeof HTMLDialogElement.prototype.showModal === 'function';

    /* ----------------- About lightbox -------------- */
    (function () {
      const dlg = $('#about-lightbox');
      if (!dlg) return;
      const img = dlg.querySelector('.lightbox-img');
      const closeBtn = dlg.querySelector('.lightbox-close');

      const openLightbox = (src, alt = '') => {
        if (!src) return;
        img.src = src;
        img.alt = alt;
        dlg.style.display = 'grid';
        dlg.setAttribute('open', '');
        dlg.removeAttribute('aria-hidden');
        if (isDialogSupported) {
          try { dlg.showModal(); } catch (_) {}
        }
        // focus close button
        closeBtn?.focus();
      };

      const closeLightbox = () => {
        if (isDialogSupported) {
          try { dlg.close(); } catch (_) {}
        }
        dlg.removeAttribute('open');
        dlg.setAttribute('aria-hidden', 'true');
        dlg.style.display = 'none';
        img.src = '';
      };

      // open handlers
      $$('.about-thumb').forEach(btn => {
        btn.addEventListener('click', () => {
          const src = btn.dataset.full || btn.querySelector('img')?.currentSrc || btn.querySelector('img')?.src;
          const alt = btn.querySelector('img')?.alt || '';
          openLightbox(src, alt);
        });
      });

      // close handlers
      closeBtn?.addEventListener('click', closeLightbox);
      dlg.addEventListener('click', (e) => {
        if (e.target === dlg) closeLightbox();
      });
      dlg.addEventListener('keydown', (e) => {
        if (e.key === 'Escape') closeLightbox();
      });
    }());

    /* ----------------- Service modal ---------------- */
    (function () {
      const cards = $$('.svc-card');
      const modal = $('#svc-modal');
      const scrim = $('#svc-scrim');
      if (!cards.length || !modal) return;

      const titleEl = $('#svc-modal-title');
      const bodyEl = $('#svc-modal-body');
      const btnPrev = $('#svc-prev');
      const btnNext = $('#svc-next');
      const btnClose = $('#svc-modal-close');
      let index = 0;

      const render = (i) => {
        index = (i + cards.length) % cards.length;
        const card = cards[index];
        const title = card.dataset.title || card.querySelector('.svc-title')?.textContent || 'Service';
        titleEl.textContent = title;
        bodyEl.innerHTML = '';
        const tpl = card.querySelector('template.svc-detail');
        if (tpl && tpl.content) bodyEl.appendChild(tpl.content.cloneNode(true));
        else bodyEl.innerHTML = `<p>${card.dataset.teaser || ''}</p>`;
      };

      const openModal = () => {
        modal.removeAttribute('aria-hidden');
        modal.style.display = 'grid';
        if (isDialogSupported) {
          try { modal.showModal(); } catch (_) {}
        } else {
          modal.setAttribute('open', '');
          if (scrim) scrim.hidden = false;
        }
        modal.focus();
      };

      const closeModal = () => {
        if (isDialogSupported) {
          try { modal.close(); } catch (_) {}
        }
        modal.setAttribute('aria-hidden', 'true');
        modal.style.display = 'none';
        modal.removeAttribute('open');
        if (scrim) scrim.hidden = true;
      };

      cards.forEach((card, i) => {
        card.querySelectorAll('.svc-read').forEach(btn => {
          btn.addEventListener('click', (ev) => {
            ev.preventDefault();
            render(i);
            openModal();
          });
        });
        // Also allow clicking the hover overlay
        const hover = card.querySelector('.svc-hover');
        hover?.addEventListener('click', () => {
          render(i);
          openModal();
        });
      });

      btnPrev?.addEventListener('click', () => render(index - 1));
      btnNext?.addEventListener('click', () => render(index + 1));
      btnClose?.addEventListener('click', closeModal);
      modal.addEventListener('click', (e) => {
        if (e.target === modal) closeModal();
      });
      modal.addEventListener('keydown', (e) => {
        if (e.key === 'Escape') closeModal();
        if (e.key === 'ArrowRight') render(index + 1);
        if (e.key === 'ArrowLeft') render(index - 1);
      });
    }());
  }());
</script>
