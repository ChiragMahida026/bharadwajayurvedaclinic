<!-- JS: lightbox, service modal & behaviour (keeps all original logic) -->
<script>
  document.addEventListener('DOMContentLoaded', () => {
    /* ================== Close any overlays on entry ================== */
    function closeAllOverlays() {
      document.querySelectorAll('dialog').forEach(dlg => {
        try { if (typeof dlg.close === 'function') dlg.close(); } catch(_) {}
        dlg.removeAttribute('open');
        dlg.style.display = 'none';
        dlg.classList.remove('closing');
      });
      const svcScrim = document.getElementById('svc-scrim');
      if (svcScrim) svcScrim.hidden = true;
      document.querySelectorAll('.scrim, .modal-scrim').forEach(s => {
        s.classList.remove('is-visible');
        s.hidden = true;
        s.style.pointerEvents = 'none';
      });
    }
    closeAllOverlays();
    window.addEventListener('pageshow', closeAllOverlays, { once: true });

    /* =============== About lightbox =============== */
    (function () {
      const dlg = document.getElementById('about-lightbox');
      if (!dlg) return;
      const img = dlg.querySelector('.lightbox-img');

      const openDlg = (src) => {
        img.src = src || '';
        dlg.style.display = 'grid';
        if (typeof dlg.showModal === 'function') dlg.showModal();
        else dlg.setAttribute('open', '');
      };
      const closeDlg = () => {
        dlg.classList.add('closing');
        const finish = () => {
          try { if (typeof dlg.close === 'function') dlg.close(); } catch(_) {}
          dlg.removeAttribute('open');
          dlg.style.display = 'none';
          dlg.classList.remove('closing');
          dlg.removeEventListener('animationend', finish);
        };
        dlg.addEventListener('animationend', finish);
        if (getComputedStyle(dlg).animationName === 'none') finish();
      };

      document.querySelectorAll('.about-thumb').forEach(btn => {
        btn.addEventListener('click', () => openDlg(btn.dataset.full || btn.querySelector('img').src));
      });
      dlg.querySelector('.lightbox-close').addEventListener('click', closeDlg);
      dlg.addEventListener('click', (e) => {
        const imgRect = img.getBoundingClientRect();
        if (e.clientX < imgRect.left || e.clientX > imgRect.right || e.clientY < imgRect.top || e.clientY > imgRect.bottom) {
          closeDlg();
        }
      });
      dlg.addEventListener('keydown', (e) => { if (e.key === 'Escape') closeDlg(); });
    }());

    /* =============== Service modal + fallback scrim =============== */
    (function () {
      const cards   = Array.from(document.querySelectorAll('.svc-card'));
      const modal   = document.getElementById('svc-modal');
      const scrim   = document.getElementById('svc-scrim'); // fallback only
      const titleEl = document.getElementById('svc-modal-title');
      const bodyEl  = document.getElementById('svc-modal-body');
      const btnPrev = document.getElementById('svc-prev');
      const btnNext = document.getElementById('svc-next');
      const btnClose= document.getElementById('svc-modal-close');

      if (!cards.length || !modal) return;

      const nativeDialog = typeof modal.showModal === 'function';
      let index = 0;

      function render(i) {
        index = (i + cards.length) % cards.length;
        const card = cards[index];
        titleEl.textContent = card.dataset.title || card.querySelector('.svc-title').textContent;
        const tpl = card.querySelector('template.svc-detail');
        bodyEl.innerHTML = '';
        if (tpl && tpl.content) bodyEl.appendChild(tpl.content.cloneNode(true));
        else bodyEl.innerHTML = `<p>${card.dataset.teaser || ''}</p>`;
      }

      function openModal() {
        modal.classList.remove('closing');
        modal.style.display = 'grid';
        if (nativeDialog) {
          if (modal.hasAttribute('open')) { try { modal.close(); } catch(_) {} }
          modal.showModal();
        } else {
          modal.setAttribute('open', '');
          if (scrim) scrim.hidden = false;
        }
        modal.focus();
      }

      function closeModal() {
        modal.classList.add('closing');
        const finish = () => {
          try { if (nativeDialog) modal.close(); } catch(_) {}
          modal.removeAttribute('open');
          modal.style.display = 'none';
          if (!nativeDialog && scrim) scrim.hidden = true;
          modal.classList.remove('closing');
          modal.removeEventListener('animationend', finish);
        };
        modal.addEventListener('animationend', finish);
        if (getComputedStyle(modal).animationName === 'none') finish();
      }

      // Bind click for each card's "Read more" & hover overlay
      cards.forEach((card, i) => {
        card.querySelectorAll('.svc-read').forEach(btn => {
          btn.addEventListener('click', (e) => {
            e.preventDefault();
            render(i);
            openModal();
          });
        });
        const hover = card.querySelector('.svc-hover');
        if (hover) hover.addEventListener('click', (e) => {
          if (e.target.closest('.svc-read')) return;
          render(i);
          openModal();
        });
      });

      // Modal controls
      if (btnPrev) btnPrev.addEventListener('click', () => render(index - 1));
      if (btnNext) btnNext.addEventListener('click', () => render(index + 1));
      if (btnClose) btnClose.addEventListener('click', closeModal);
      const closeButtons = modal.querySelectorAll('#svc-modal-close-2');
      closeButtons.forEach(b => b.addEventListener('click', closeModal));
      if (scrim) scrim.addEventListener('click', closeModal);

      // Click outside the panel closes
      modal.addEventListener('click', (e) => {
        const panel = modal.querySelector('.modal-card');
        if (!panel) return;
        const r = panel.getBoundingClientRect();
        if (e.clientX < r.left || e.clientX > r.right || e.clientY < r.top || e.clientY > r.bottom) closeModal();
      });

      modal.addEventListener('keydown', (e) => {
        if (e.key === 'Escape') closeModal();
        if (e.key === 'ArrowRight') render(index + 1);
        if (e.key === 'ArrowLeft')  render(index - 1);
      });
    }());

    /* =============== Lazy load Google Maps =============== */
    (function () {
      const loadMapBtn = document.getElementById('load-map-btn');
      const mapContainer = document.getElementById('map-container');
      const googleMap = document.getElementById('google-map');

      if (!loadMapBtn || !googleMap) return;

      loadMapBtn.addEventListener('click', () => {
        googleMap.style.display = 'block';
        mapContainer.style.display = 'none';
        googleMap.setAttribute('aria-hidden', 'false');
        // Focus management for accessibility
        googleMap.focus();
      });
    }());

    /* =============== Enhanced Contact Form =============== */
    (function () {
      const form = document.getElementById('contact-form');
      const submitBtn = form.querySelector('button[type="submit"]');
      const feedback = document.getElementById('contact-feedback');
      const inputs = form.querySelectorAll('input, textarea');

      if (!form) return;

      // Real-time validation
      inputs.forEach(input => {
        input.addEventListener('blur', validateField);
        input.addEventListener('input', clearFieldError);
      });

      function validateField(e) {
        const field = e.target;
        const errorSpan = document.getElementById(field.id + '-error');
        const value = field.value.trim();

        errorSpan.textContent = '';
        field.setAttribute('aria-invalid', 'false');

        if (field.hasAttribute('required') && !value) {
          errorSpan.textContent = `${field.labels[0].textContent} is required`;
          field.setAttribute('aria-invalid', 'true');
          return false;
        }

        if (field.type === 'email' && value) {
          const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
          if (!emailRegex.test(value)) {
            errorSpan.textContent = 'Please enter a valid email address';
            field.setAttribute('aria-invalid', 'true');
            return false;
          }
        }

        if (field.minLength && value.length < field.minLength) {
          errorSpan.textContent = `Minimum ${field.minLength} characters required`;
          field.setAttribute('aria-invalid', 'true');
          return false;
        }

        return true;
      }

      function clearFieldError(e) {
        const field = e.target;
        const errorSpan = document.getElementById(field.id + '-error');
        if (errorSpan.textContent && field.value.trim()) {
          errorSpan.textContent = '';
          field.setAttribute('aria-invalid', 'false');
        }
      }

      form.addEventListener('submit', async (e) => {
        e.preventDefault();

        // Validate all fields
        let isValid = true;
        inputs.forEach(input => {
          if (!validateField({ target: input })) {
            isValid = false;
          }
        });

        if (!isValid) {
          feedback.textContent = 'Please correct the errors above';
          feedback.className = 'small error';
          return;
        }

        // Show loading state
        const originalText = submitBtn.textContent;
        submitBtn.textContent = 'Sending...';
        submitBtn.disabled = true;
        submitBtn.setAttribute('aria-busy', 'true');

        feedback.textContent = '';
        feedback.className = 'small';

        try {
          // Simulate form submission (replace with actual endpoint)
          const formData = new FormData(form);
          const response = await fetch('/api/contact', {
            method: 'POST',
            body: formData
          });

          if (response.ok) {
            feedback.textContent = 'Message sent successfully! We\'ll get back to you soon.';
            feedback.className = 'small success';
            form.reset();
            // Reset validation states
            inputs.forEach(input => {
              input.setAttribute('aria-invalid', 'false');
              const errorSpan = document.getElementById(input.id + '-error');
              errorSpan.textContent = '';
            });
          } else {
            throw new Error('Failed to send message');
          }
        } catch (error) {
          console.error('Form submission error:', error);
          feedback.textContent = 'Failed to send message. Please try again or contact us directly.';
          feedback.className = 'small error';
        } finally {
          // Reset button state
          submitBtn.textContent = originalText;
          submitBtn.disabled = false;
          submitBtn.removeAttribute('aria-busy');
        }
      });
    })();
  });
</script>

