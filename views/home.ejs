<script>
document.addEventListener('DOMContentLoaded', () => {
  function closeAllOverlays(){
    document.querySelectorAll('dialog').forEach(dlg=>{
      try{ if(typeof dlg.close==='function') dlg.close(); }catch(_) {}
      dlg.removeAttribute('open'); dlg.style.display='none'; dlg.classList.remove('closing');
    });
    document.querySelectorAll('.scrim,.modal-scrim').forEach(s=>{s.classList.remove('is-visible');s.hidden=true;s.style.pointerEvents='none'});
  }
  closeAllOverlays();
  window.addEventListener('pageshow', closeAllOverlays, {once:true});

  (function(){
    const dlg=document.getElementById('about-lightbox'); if(!dlg)return;
    const img=dlg.querySelector('.lightbox-img');
    const openDlg=(src)=>{ img.src=src||''; dlg.style.display='grid'; if(typeof dlg.showModal==='function') dlg.showModal(); else dlg.setAttribute('open',''); };
    const closeDlg=()=>{ dlg.classList.add('closing'); const finish=()=>{ try{ if(typeof dlg.close==='function') dlg.close(); }catch(_){} dlg.removeAttribute('open'); dlg.style.display='none'; dlg.classList.remove('closing'); dlg.removeEventListener('animationend',finish); }; dlg.addEventListener('animationend',finish); if(getComputedStyle(dlg).animationName==='none') finish(); };
    document.querySelectorAll('.about-thumb').forEach(btn=>btn.addEventListener('click',()=>openDlg(btn.dataset.full||btn.querySelector('img').src)));
    dlg.querySelector('.lightbox-close').addEventListener('click',closeDlg);
    dlg.addEventListener('click',(e)=>{ const r=img.getBoundingClientRect(); if(e.clientX<r.left||e.clientX>r.right||e.clientY<r.top||e.clientY>r.bottom) closeDlg(); });
    dlg.addEventListener('keydown',(e)=>{ if(e.key==='Escape') closeDlg(); });
  }());

  (function(){
    const loadMapBtn=document.getElementById('load-map-btn');
    const mapContainer=document.getElementById('map-container');
    const googleMap=document.getElementById('google-map');
    if(!loadMapBtn||!googleMap) return;
    loadMapBtn.addEventListener('click',()=>{
      googleMap.style.display='block';
      mapContainer.style.display='none';
      googleMap.setAttribute('aria-hidden','false');
      try{ googleMap.focus(); }catch(_){}
    });
  }());

  (function(){
    const form=document.getElementById('contact-form'); if(!form) return;
    const submitBtn=form.querySelector('button[type="submit"]');
    const feedback=document.getElementById('contact-feedback');
    const inputs=form.querySelectorAll('input,textarea');
    inputs.forEach(i=>{ i.addEventListener('blur',validateField); i.addEventListener('input',clearFieldError) });
    function validateField(e){
      const field=e.target; const errorSpan=document.getElementById(field.id+'-error'); const value=field.value.trim(); if(!errorSpan) return true;
      errorSpan.textContent=''; field.setAttribute('aria-invalid','false');
      if(field.hasAttribute('required') && !value){ errorSpan.textContent=`${field.labels&&field.labels[0]?field.labels[0].textContent:'This field'} is required`; field.setAttribute('aria-invalid','true'); return false; }
      if(field.type==='email' && value){ const re=/^[^\s@]+@[^\s@]+\.[^\s@]+$/; if(!re.test(value)){ errorSpan.textContent='Please enter a valid email address'; field.setAttribute('aria-invalid','true'); return false; } }
      if(field.minLength && value.length < parseInt(field.minLength,10)){ errorSpan.textContent=`Minimum ${field.minLength} characters required`; field.setAttribute('aria-invalid','true'); return false; }
      return true;
    }
    function clearFieldError(e){ const field=e.target; const errorSpan=document.getElementById(field.id+'-error'); if(errorSpan && errorSpan.textContent && field.value.trim()){ errorSpan.textContent=''; field.setAttribute('aria-invalid','false'); } }
    form.addEventListener('submit', async (e)=>{
      e.preventDefault(); let isValid=true; inputs.forEach(i=>{ if(!validateField({target:i})) isValid=false; });
      if(!isValid){ feedback.textContent='Please correct the errors above'; feedback.className='small error'; return; }
      const originalText=submitBtn.textContent; submitBtn.textContent='Sending...'; submitBtn.disabled=true; submitBtn.setAttribute('aria-busy','true'); feedback.textContent=''; feedback.className='small';
      try{
        const formData=new FormData(form);
        const response=await fetch('/api/contact',{method:'POST',body:formData});
        if(response.ok){ feedback.textContent="Message sent successfully! We'll get back to you soon."; feedback.className='small success'; form.reset(); inputs.forEach(i=>{ i.setAttribute('aria-invalid','false'); const err=document.getElementById(i.id+'-error'); if(err) err.textContent=''; }); }
        else throw new Error('Failed to send');
      }catch(err){ console.error(err); feedback.textContent='Failed to send message. Please try again or contact us directly.'; feedback.className='small error'; }
      finally{ submitBtn.textContent=originalText; submitBtn.disabled=false; submitBtn.removeAttribute('aria-busy'); }
    });
  }());

  (function(){
    const dlg=document.getElementById('product-modal'); if(!dlg) return;
    const nativeDialog=typeof dlg.showModal==='function';
    const title=document.getElementById('product-modal-title');
    const desc=document.getElementById('product-modal-desc');
    const img=document.getElementById('product-modal-img');
    const price=document.getElementById('product-modal-price');
    const buy=document.getElementById('product-modal-buy');
    const closeBtn=document.getElementById('product-modal-close');
    function openModal(){ dlg.classList.remove('closing'); dlg.style.display='grid'; if(nativeDialog){ try{ if(dlg.hasAttribute('open')) dlg.close(); }catch(_){} dlg.showModal(); } else { dlg.setAttribute('open',''); const scrim=document.getElementById('product-scrim'); if(scrim) scrim.hidden=false; } dlg.focus(); }
    function closeModal(){ dlg.classList.add('closing'); const finish=()=>{ try{ if(nativeDialog) dlg.close(); }catch(_){} dlg.removeAttribute('open'); dlg.style.display='none'; const scrim=document.getElementById('product-scrim'); if(scrim) scrim.hidden=true; dlg.classList.remove('closing'); dlg.removeEventListener('animationend',finish); }; dlg.addEventListener('animationend',finish); if(getComputedStyle(dlg).animationName==='none') finish(); }
    closeBtn.addEventListener('click',closeModal);
    dlg.addEventListener('click',(e)=>{ const panel=dlg.querySelector('.modal-card'); if(!panel) return; const r=panel.getBoundingClientRect(); if(e.clientX<r.left||e.clientX>r.right||e.clientY<r.top||e.clientY>r.bottom) closeModal(); });
    dlg.addEventListener('keydown',(e)=>{ if(e.key==='Escape') closeModal(); });
    document.querySelectorAll('.catalog .info-btn').forEach(btn=>{
      btn.addEventListener('click',()=>{
        title.textContent = btn.dataset.name || 'Product';
        desc.textContent = btn.dataset.desc || '';
        price.textContent = btn.dataset.price ? `‚Çπ${btn.dataset.price}` : '';
        const src = btn.dataset.img || '';
        if(src){ img.src = src; img.style.display='block'; img.alt = title.textContent; } else { img.removeAttribute('src'); img.style.display='none'; }
        buy.href = '/checkout/' + btn.dataset.id;
        openModal();
      });
    });
    document.querySelectorAll('.catalog .add-to-cart-btn').forEach(btn=>{
      btn.addEventListener('click', async ()=>{
        const id = btn.dataset.id; btn.disabled = true; const prev = btn.textContent; btn.textContent = 'Adding...';
        try{
          const res = await fetch('/cart/add', { method:'POST', headers:{'Content-Type':'application/json'}, body: JSON.stringify({ productId:id, qty:1 }) });
          const data = await res.json();
          if(!res.ok) throw new Error(data.message||'Failed');
          btn.textContent = 'Added!';
          setTimeout(()=>{ btn.textContent = prev; btn.disabled = false; },800);
        }catch(e){ console.error(e); btn.textContent = 'Try again'; setTimeout(()=>{ btn.textContent = prev; btn.disabled = false; },1200); }
      });
    });
  }());

  (function(){
    const carousel = document.querySelector('.half-circle-slideshow');
    if(!carousel) return;
    const track = carousel.querySelector('.slide-track');
    const slides = Array.from(track.querySelectorAll('.slide'));
    const dots = Array.from(carousel.querySelectorAll('.nav-dot'));
    const status = document.getElementById('slideshow-status');
    const prefersReduced = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
    let index = 0;
    let timer = null;
    const interval = parseInt(carousel.dataset.interval,10) || 4500;
    const autoplay = carousel.dataset.autoplay === 'true' && !prefersReduced;
    const progressAnimationClass = 'is-animating';

    function applyActive(i){
      index = (i + slides.length) % slides.length;
      slides.forEach((s,idx)=>{ const active = idx===index; s.classList.toggle('active',active); s.setAttribute('aria-hidden',!active); });
      dots.forEach((d,idx)=>{ const active = idx===index; d.classList.toggle('active',active); d.setAttribute('aria-pressed',active); const pf = d.querySelector('.progress-fg'); if(pf){ if(active && autoplay){ pf.classList.remove(progressAnimationClass); void pf.offsetWidth; pf.classList.add(progressAnimationClass); } else pf.classList.remove(progressAnimationClass); } });
      if(status) status.textContent = `Slide ${index+1} of ${slides.length}`;
    }

    function setSlide(i, fromUser=false){
      if(!fromUser) clearInterval(timer);
      applyActive(i);
      if(autoplay && !fromUser) restartTimer();
    }
    function next(){ setSlide(index+1,true); }
    function restartTimer(){
      if(!autoplay) return;
      clearInterval(timer);
      timer = setInterval(()=>{ setSlide(index+1,true); }, interval);
      const cur = dots[index];
      if(cur){ const pf = cur.querySelector('.progress-fg'); if(pf){ pf.classList.remove(progressAnimationClass); void pf.offsetWidth; pf.classList.add(progressAnimationClass); } }
    }

    dots.forEach((dot,i)=>{ dot.addEventListener('click',()=>setSlide(i,false)); dot.addEventListener('keydown',(e)=>{ if(e.key==='Enter' || e.key===' '){ e.preventDefault(); setSlide(i,false); } }); });

    carousel.addEventListener('keydown',(e)=>{ if(e.key==='ArrowRight'){ clearInterval(timer); setSlide(index+1); } if(e.key==='ArrowLeft'){ clearInterval(timer); setSlide(index-1); } });

    document.addEventListener('visibilitychange',()=>{ if(document.hidden) clearInterval(timer); else if(autoplay) restartTimer(); });

    applyActive(0); if(autoplay) restartTimer();
  }());

  (function(){
    const toReveal = document.querySelectorAll('[data-reveal]');
    if(!toReveal.length) return;
    const prefersReduced = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
    if(prefersReduced){ toReveal.forEach(el=>el.classList.add('in')); return; }
    const obs = new IntersectionObserver((entries,o)=>{ entries.forEach(entry=>{ if(entry.isIntersecting){ entry.target.classList.add('in'); o.unobserve(entry.target); } }); }, { threshold:0.25 });
    toReveal.forEach(el=>obs.observe(el));
  }());
});
</script>

