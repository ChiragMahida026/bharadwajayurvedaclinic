<script>
  // Keep only one pop-card open; close on outside click or ESC
  document.addEventListener('click', (e) => {
    // Close if user clicked the scrim
    const scrim = e.target.closest('.svc-scrim');
    if (scrim) {
      const details = scrim.previousElementSibling?.closest('details.svc-more');
      if (details) details.removeAttribute('open');
      return;
    }

    // If they clicked the summary, allow native toggle but close others
    const clickedSummary = e.target.closest('summary');
    if (clickedSummary) {
      const current = clickedSummary.closest('details.svc-more');
      document.querySelectorAll('details.svc-more[open]').forEach(d => {
        if (d !== current) d.removeAttribute('open');
      });
      return; // let the browser toggle current
    }

    // Clicked outside any card? close all
    if (!e.target.closest('.svc-card')) {
      document.querySelectorAll('details.svc-more[open]').forEach(d => d.removeAttribute('open'));
    }
  });

  // ESC to close all
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') {
      document.querySelectorAll('details.svc-more[open]').forEach(d => d.removeAttribute('open'));
    }
  });
</script>


